<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <pomVersion>3</pomVersion>
  <id>semantag</id>

  <name>SemanTag</name>
  <currentVersion>0.1</currentVersion>
  <inceptionYear>2004</inceptionYear>
  <package>org.semantag</package>
  
  <shortDescription>Topic Map and RDF processing  with Jelly, Jena and TM4J.</shortDescription>
  
  <organization>
    <name>The SemanTag Project Team</name>
  </organization>
  <developers>
    <developer>
      <name>Niko Schmuck</name>
      <id>niko_schmuck</id>
      <email>niko_schmuck at users.sourceforge.net</email>
      <url>www.nava.de</url>
      <timzeone>+1</timzeone>
    </developer>
    <developer>
      <name>Christoph Fröhlich</name>
      <id>c_froehlich</id>
      <email>c_froehlich at users.sourceforge.net</email>
      <url>www.folge2.de</url>
      <timzeone>+1</timzeone>
    </developer>
  </developers>  
  <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  <!-- Define dependencies to other projects/libraries             -->
  <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  
  <dependencies>
    <!-- tm4j ============================================ -->
    <dependency>
      <groupId>tm4j</groupId>
      <artifactId>tm4j</artifactId>
      <!-- we have no project.xml for tm4j, so no further dependencies 
           can be resolved at this point -->
      <version>0.9.7</version>
      <url>http://tm4j.org/</url>
    </dependency>
    <dependency>
      <groupId>tm4j</groupId>
      <artifactId>tm4j-tologx</artifactId>
      <version>0.9.7</version>
      <url>http://tm4j.org/</url>
    </dependency>
    <dependency>
      <groupId>tm4j</groupId>
      <artifactId>mango</artifactId>
      <jar>mango.jar</jar>
    </dependency>
    <dependency>
      <groupId>tm4j</groupId>
      <artifactId>resolver</artifactId>
      <jar>resolver.jar</jar>
    </dependency>
    <!-- jena ============================================ -->
    <dependency>
      <groupId>jena</groupId>
      <artifactId>jena</artifactId>
      <version>2.1</version>
      <url>http://jena.sourceforge.net/</url>
    </dependency>    
    <dependency>
      <groupId>jena</groupId>
      <artifactId>icu4j</artifactId>
      <version>2.6</version>
      <url>http://jena.sourceforge.net/</url>
    </dependency>    
    <!-- xerces ========================================== -->
    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.6.2</version>
    </dependency>
    <!-- commons ========================================= -->
    <dependency>
      <groupId>commons-jelly</groupId>
      <artifactId>commons-jelly</artifactId>
      <version>1.0-RC1</version>
      <url>http://jakarta.apache.org/commons/jelly/</url>
    </dependency>
    <dependency>
      <groupId>commons-jelly</groupId>
      <artifactId>commons-jelly-tags-xml</artifactId>
      <version>SNAPSHOT</version>
      <url>http://jakarta.apache.org/commons/jelly/</url>
    </dependency>
    <dependency>
      <groupId>commons-jexl</groupId>
      <artifactId>commons-jexl</artifactId>
      <version>1.0</version>
      <url>http://jakarta.apache.org/commons/jexl/</url>
    </dependency>
    <dependency>
      <groupId>commons-beanutils</groupId>
      <artifactId>commons-beanutils</artifactId>
      <version>1.7.0</version>
      <url>http://jakarta.apache.org/commons/beanutils/</url>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.1</version>
      <url>http://jakarta.apache.org/commons/collections/</url>
    </dependency>    
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
      <url>http://jakarta.apache.org/commons/logging/</url>
    </dependency>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.0</version>
      <url>http://jakarta.apache.org/commons/cli/</url>
    </dependency>
    <!-- dom4j =========================================== -->
    <dependency>
      <groupId>dom4j</groupId>
      <artifactId>dom4j</artifactId>
      <version>1.5</version>
      <url>http://dom4j.sourceforge.net/</url>
    </dependency>
    <!-- antlr============================================ -->
    <dependency>
      <groupId>antlr</groupId>
      <artifactId>antlr</artifactId>
      <version>2.7.2</version>
      <url>http://www.antlr.org/</url>
    </dependency>
  </dependencies>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  <!-- Build and test relevant paths                               -->
  <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test</directory>
          <includes>
            <include>org/semantag/resource/**/*</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>

</project>
